{
  "name": "realtime-voice-app",
  "version": "1.0.0",
  "description": "Real-time voice interaction app using OpenAI's API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "script:audio": "ts-node src/modules/audio/playSounds.ts",
    "script:record": "ts-node src/modules/recording/record.ts"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "node-record-lpcm16": "^1.0.1",
    "node-vad": "^1.1.4",
    "speaker": "github:JasonBenn/node-speaker#ab4f20a08751a260daf8ffdee9e64b24f57f90b1",
    "wav": "^1.0.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.2",
    "@types/wav": "^1.0.3",
    "@types/ws": "^8.5.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
